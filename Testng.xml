<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Banking Suite" verbose="1" parallel="false">
  <listeners>
    <listener class-name="listeners.ExtentReportListener"/>
  </listeners>

  <test name="Login Module">
    <parameter name="browser" value="chrome"/>
    <classes>
      <class name="tests.LoginTests"/>
    </classes>
  </test>

  <test name="Fund Transfer Module">
    <parameter name="browser" value="chrome"/>
    <classes>
      <class name="tests.FundTransferTests"/>
    </classes>
  </test>

  <test name="Loan Module">
    <parameter name="browser" value="chrome"/>
    <classes>
      <class name="tests.LoanTests"/>
      <class name="tests.EmiTests"/>
    </classes>
	</test>
  <test name="Transaction History Module">
    <parameter name="browser" value="chrome"/>
    <classes>
      <class name="tests.TransactionHistoryTests"/>
    </classes>
  </test>
</suite>